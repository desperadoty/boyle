.shopBtn {
  font-size: 50%;
  width: 80px;
  height: 30px;
  border: 1px solid #39f;
  background-color: #fff;
  border-radius: 5px;
  line-height: 28px;
}

.tip {
 font-size: 50%;
 margin-bottom: 10px;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.good-img {
  width: 88px;
  height: 88px;
  margin: 10px;
}

.good-name {
  display: inline-block;
  vertical-align: top;
  font-size: 16px;
  margin-top: 10px;
}

.price {
  float: right;
  vertical-align: top;
  font-size: 16px;
  margin-top: 10px;
  margin-right: 30px;
}

.stepper {
  border: 1px solid #ccc;
  border-radius: 3px;
  width: 80px;
  height:25px;
  margin-top: -42px;
  margin-left: 108px;
}

.stepper text {
  width: 24px;
  height: 28px;
  line-height: 25px;
  text-align: center;
  float: left;
}

.stepper input {
  float: left;
  margin: 0 auto;
  width: 30px;
  text-align: center;
  font-size: 12px;
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
}

.line {
  width:100%;
  height:1px;
  margin-left: 0px;
  margin-top: 8px;
  margin-bottom: 4px;
  background: #e6e6fa;
}

.total {
  height: 40px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 20px;
}

.delete-img {
  width:16px;
  height:16px;
  float: left;
  margin-top: -20px;
  margin-left: 100px;
}

.total .total_text {
  display: flex;
  color: #777;
}

.total .total_text text {
  color: #ec5151;
}

.total .total_js {
  color: #fff;
  background: #ec5151;
  height: 30px;
  margin: 0;
}
